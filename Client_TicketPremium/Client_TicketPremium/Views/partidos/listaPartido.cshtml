@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>Partidos disponibles</title>
    <link rel="icon" type="image/png" href="http://localhost:8080/TicketPremium/imagen/logo.png">
    <link rel="stylesheet" type="text/css" href="http://localhost:8080/TicketPremium/css/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="http://localhost:8080/TicketPremium/js/script.js" type="text/javascript"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="~/Views/index.cshtml">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="~/Views/partidos/listaPartido.cshtml">Partidos Disponibles</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/TicketPremium/ReporteServlet">Facturas</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/TicketPremium/ReporteServlet">Reporte de ventas</a>
            </li>
        </ul>
    </nav>
    <div class="wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="page-header" clearfix>
                        <h2 class="pull-left">Partidos no disputados</h2>
                        <form action="PartidosServlet" method="POST">
                            <div class="form-row">
                                <div class="col-md-11">
                                    <input type="text" class="form-control" placeholder="Equipo" name="equipo">
                                </div>
                                <div class="col-md-1">
                                    <button type="submit" class="btn btn-ptimary">Buscar partido</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <br><br>
                    <div class="tabla">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Equipo Local</th>
                                    <th>Equipo Visitante</th>
                                    <th>Lugar</th>
                                    <th>Fecha</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                <c:forEach items="${partidos}" var="x">
                                    <tr>
                                        <td>${x.equipoLocal}</td>
                                        <td>${x.equipoVisita}</td>
                                        <td>${x.lugar}</td>
                                        <td>${x.fecha}</td>
                                        <td>
                                            <a href='http://localhost:8080/TicketPremium/FacturaServlet?partido=${x.codigo}' title='comprar' class="centrar" data-toggle="tooltip">
                                                <i class="material-icons centrar" data-toggle="tooltip">shopping_cart</i>
                                            </a>
                                        </td>
                                    </tr>
                                </c:forEach>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
